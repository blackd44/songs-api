{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"],
      "@routers/*": ["src/routers/*"],
      "@mocks/*": ["__mocks__/*"]
    },
    "types": ["@types/jest"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
